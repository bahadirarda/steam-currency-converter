{
  "manifest_version": 3,
  "name": "Steam Fiyat Dönüştürücü",
  "version": "1.1",
  "description": "Steam'deki oyun fiyatlarını kullanıcıların yerel para birimi cinsinden hızlı ve kolay bir şekilde görmelerini sağlar.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://store.steampowered.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://store.steampowered.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/flags/usa.png",
        "icons/flags/turkiye.png",
        "fonts/motiva-sans-regular.otf"
      ],
      "matches": ["*://store.steampowered.com/*"]
    }
  ]
}
